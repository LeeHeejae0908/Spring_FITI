<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.spring.wefit.user.mapper.IUserMapper">
	<select id="emailCheck" resultType="int">
		SELECT COUNT(*) FROM member
		WHERE mEmail = #{email}
	</select>
	
	<select id="nickCheck" resultType="int">
		SELECT COUNT(*) FROM member
		WHERE mNick = #{nick}	
	</select>

	<insert id="join">
		INSERT INTO member(mNum, mEmail,mNick,mPasswd,mPhone,mHumanYN,mEmailYN, mCode)
		VALUES (member_seq.NEXTVAL,#{mEmail},#{mNick},#{mPasswd},#{mPhone},'N','N',#{mCode})
	</insert>
	
	<update id="authUser">
		UPDATE member SET mEmailYN = 'Y'
		WHERE mNick = #{nick} AND mCode = #{code}
	</update>
	
	<update id="codeChange">
		UPDATE member SET mCode = #{code}
		WHERE mNick = #{nick}
	</update>
	
	<select id="getInfo" resultType="com.spring.wefit.command.UserVO">
		SELECT * FROM member
		WHERE mEmail = #{email }
	</select>
	
		
	
</mapper>